<!DOCTYPE html>
<html>
    <head>
        <title>Weather Forecast</title>
        <script>
            fetch('https://api.open-meteo.com/v1/forecast?latitude=49.49&longitude=8.54&hourly=temperature_2m')
              .then(response => response.json())
              .then(data => {
                const weatherContainer = document.getElementById('weather-container');
                const temperature = data.temperature;
                weatherContainer.innerHTML = `<p>The current temperature is ${temperature} degrees Celsius.</p>`;
              });
        </script>
    </head>
    <body>
        <div id="weather-container"></div>
    </body>
</html>


